---
/**
 * 404 Error Page
 * 
 * Custom 404 page with helpful navigation back to main sections.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';
import FeatureGrid from '../components/sections/FeatureGrid.astro';
---

<BaseLayout
  title="Page Not Found - EncryptHer"
  description="The page you're looking for doesn't exist. Explore our programs and resources instead."
>
  <div class="min-h-[70vh] flex items-center justify-center py-20 px-4 bg-gradient-to-br from-primary/5 via-background to-accent/5">
    <div class="container mx-auto max-w-4xl text-center">
      <!-- Error Code -->
      <div class="mb-8">
        <h1 class="text-9xl font-extrabold text-primary mb-4">404</h1>
        <div class="h-1 w-24 bg-gradient-to-r from-primary to-accent mx-auto rounded-full"></div>
      </div>

      <!-- Error Message -->
      <h2 class="text-4xl md:text-5xl font-extrabold mb-4 text-foreground">
        Page Not Found
      </h2>
      <p class="text-xl text-muted-foreground mb-12 max-w-2xl mx-auto">
        The page you're looking for doesn't exist or has been moved. But don't worryâ€”we've got plenty of resources to help keep you safe and empowered.
      </p>

      <!-- Quick Links -->
      <div class="mb-16">
        <h3 class="text-2xl font-semibold mb-8 text-foreground">Where would you like to go?</h3>
        <FeatureGrid columns={3} class="max-w-5xl mx-auto">
          <Card
            href="/"
            title="Home"
            description="Return to the homepage"
            iconBg="primary"
            icon='<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>'
          />

          <Card
            href="/online-privacy"
            title="Online Privacy"
            description="Learn digital security"
            iconBg="accent"
            icon='<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" /></svg>'
          />

          <Card
            href="/travel-safety"
            title="Travel Safety"
            description="Safe travel practices"
            iconBg="primary"
            icon='<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" /></svg>'
          />

          <Card
            href="/about"
            title="About Us"
            description="Our mission and values"
            iconBg="accent"
            icon='<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>'
          />

          <Card
            href="/digital-advocacy"
            title="Digital Advocacy"
            description="Fight for privacy rights"
            iconBg="primary"
            icon='<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" /></svg>'
          />

          <Card
            href="/contact"
            title="Contact Us"
            description="Get in touch"
            iconBg="accent"
            icon='<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>'
          />
        </FeatureGrid>
      </div>

      <!-- CTA to Home -->
      <div>
        <a 
          href="/"
          class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-gradient-to-r from-primary to-accent text-primary-foreground font-semibold rounded-lg hover:opacity-90 transition-all hover:scale-105"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Homepage
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

