---
/**
 * Homepage
 * 
 * Main landing page for EncryptHer with hero, what we do, courses,
 * advocacy, and CTA sections.
 * 
 * Content is managed in src/content/index/index.md
 */

import { getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Card from '../components/Card.astro';
import CTA from '../components/CTA.astro';
import FeatureGrid from '../components/sections/FeatureGrid.astro';
import { Content } from 'astro:content/components';

// Load content from markdown
const pageContent = await getEntry('index', 'index');
const { hero, seo, structuredDataType, lastModified, cards, advocacy, cta } = pageContent.data;
const { Content } = await pageContent.render();

// Format dateModified for BaseLayout
const dateModifiedStr = lastModified?.toISOString().split('T')[0];

// Extract cards by section type
const whatWeDoCards = cards?.slice(0, 2) || [];
const courseCards = cards?.slice(2, 5) || [];
---

<BaseLayout
  title={seo.title}
  description={seo.description}
  keywords={seo.keywords}
  author={seo.author}
  structuredDataType={structuredDataType}
  dateModified={dateModifiedStr}
>
  <!-- Hero Section -->
  <Hero
    title={hero.title}
    subtitle={hero.subtitle}
    badge={hero.badge}
    badgeIcon={hero.badgeIcon}
    backgroundImage={hero.backgroundImage}
    glitchEffect={hero.glitchEffect}
    primaryCTA={hero.primaryCTA}
    secondaryCTA={hero.secondaryCTA}
  />

  <!-- What We Do Section -->
  <section id="what-we-do" class="py-20 px-4 bg-background">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center mb-12 scroll-animate">
        <h2 class="text-4xl md:text-5xl font-extrabold mb-4 text-foreground">What We Do</h2>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          EncryptHer empowers women through comprehensive educational courses and active advocacy for digital rights and privacy legislation.
        </p>
      </div>

      <FeatureGrid columns={2} class="max-w-4xl mx-auto">
        {whatWeDoCards.map((card, index) => (
          <div class="scroll-animate" style={index === 1 ? "transition-delay: 0.1s;" : undefined}>
            <Card
              title={card.title}
              description={card.description}
              iconBg={card.iconBg}
              icon={card.icon}
            />
          </div>
        ))}
      </FeatureGrid>
    </div>
  </section>

  <!-- Our Courses Section -->
  <section id="courses" class="py-20 px-4 bg-muted/50">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center mb-12 scroll-animate">
        <h2 class="text-4xl md:text-5xl font-extrabold mb-4 text-foreground">Learn It</h2>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          Comprehensive courses designed to protect and empower you
        </p>
      </div>

      <FeatureGrid columns={3}>
        {courseCards.map((card) => (
          <Card
            href={card.href}
            image={card.image}
            imageAlt={card.imageAlt}
            title={card.title}
            iconBg={card.iconBg}
            icon={card.icon}
          >
            {card.content && (
              <div class="text-sm text-muted-foreground space-y-3">
                {card.content.split('\n\n').map((paragraph) => (
                  <p>{paragraph}</p>
                ))}
              </div>
            )}
          </Card>
        ))}
      </FeatureGrid>
    </div>
  </section>

  <!-- Digital Advocacy Section -->
  {advocacy && (
    <section id="advocacy" class="py-20 px-4 bg-gradient-to-br from-primary/5 via-accent/5 to-primary/5">
      <div class="container mx-auto max-w-4xl">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-extrabold mb-4 text-foreground">Digital Advocacy</h2>
          <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
            Beyond education, we're taking action to protect women's digital rights through legislative advocacy and policy reform.
          </p>
        </div>

        <!-- Single White Card Container -->
        <div class="bg-card border border-border rounded-lg overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <!-- Image at top -->
          <div class="h-56 w-full overflow-hidden">
            <img 
              src={advocacy.image}
              alt={advocacy.imageAlt}
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          
          <!-- All Content Centered -->
          <div class="p-8 md:p-10 flex flex-col items-center justify-center text-center">
            
            {advocacy.badge && (
              <span class="inline-block text-xs font-semibold px-3 py-1 rounded-full bg-accent/10 text-accent mb-4">
                {advocacy.badge}
              </span>
            )}
            
            {advocacy.icon && (
              <div class="w-14 h-14 bg-primary/10 rounded-lg flex items-center justify-center mb-4 mx-auto">
                <div class="text-primary w-7 h-7 flex items-center justify-center" set:html={advocacy.icon} />
              </div>
            )}
            
            <h3 class="text-2xl md:text-3xl font-semibold mb-6 text-foreground">
              {advocacy.title}
            </h3>
            
            <p class="text-base text-muted-foreground mb-4 max-w-2xl" set:html={advocacy.paragraph1} />
            <p class="text-base text-muted-foreground max-w-2xl" set:html={advocacy.paragraph2} />
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  {cta && (
    <CTA
      title={cta.title}
      description={cta.description}
      primaryButton={cta.primaryButton}
      secondaryButton={cta.secondaryButton}
    />
  )}
</BaseLayout>
