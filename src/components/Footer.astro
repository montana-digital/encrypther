---
/**
 * Footer Component
 * 
 * Four-column footer with links to programs, resources, connect sections,
 * and social media icons (when enabled).
 */

import { getEnabledPlatforms } from '../config/social-media.config';

const socialPlatforms = getEnabledPlatforms();
const currentYear = new Date().getFullYear();
---

<footer class="py-12 px-4 border-t border-border bg-card">
  <div class="container mx-auto max-w-6xl">
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      <!-- Brand Column with Holographic Logo -->
      <div class="text-center md:text-left">
        <div class="logo-holographic mb-4 inline-block">
          <img 
            src="/images/encrypther-logo.png" 
            alt="EncryptHer logo" 
            class="h-32 w-32 object-cover"
            width="128"
            height="128"
          />
        </div>
      </div>
      
      <!-- Programs Column -->
      <div class="text-center md:text-left">
        <h4 class="font-semibold mb-4 text-foreground">Programs</h4>
        <ul class="space-y-2 text-sm text-muted-foreground">
          <li>
            <a href="/online-privacy" class="hover:text-foreground transition-colors">
              Online Privacy
            </a>
          </li>
          <li>
            <a href="/travel-safety" class="hover:text-foreground transition-colors">
              Travel Safety
            </a>
          </li>
          <li>
            <a href="/digital-advocacy" class="hover:text-foreground transition-colors">
              Advocacy
            </a>
          </li>
          <li>
            <a href="/public-safety" class="hover:text-foreground transition-colors">
              Public Safety
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Resources Column -->
      <div class="text-center md:text-left">
        <h4 class="font-semibold mb-4 text-foreground">Resources</h4>
        <ul class="space-y-2 text-sm text-muted-foreground">
          <li>
            <a href="/blog" class="hover:text-foreground transition-colors">
              Blog
            </a>
          </li>
          <li>
            <a href="/safety-guides" class="hover:text-foreground transition-colors">
              Safety Guides
            </a>
          </li>
          <li>
            <a href="#" class="hover:text-foreground transition-colors">
              Community
            </a>
          </li>
          <li>
            <a href="#" class="hover:text-foreground transition-colors">
              Support
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Connect Column -->
      <div class="text-center md:text-left">
        <h4 class="font-semibold mb-4 text-foreground">Connect</h4>
        <ul class="space-y-2 text-sm text-muted-foreground">
          <li>
            <a href="/about" class="hover:text-foreground transition-colors">
              About Us
            </a>
          </li>
          <li>
            <a href="/contact" class="hover:text-foreground transition-colors">
              Contact
            </a>
          </li>
          <li>
            <a href="/newsletter" class="hover:text-foreground transition-colors">
              Newsletter
            </a>
          </li>
          <li>
            <a href="/coming-soon" class="hover:text-foreground transition-colors">
              Donate
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Social Media & Copyright -->
    <div class="pt-8 border-t border-border">
      <!-- Social Media Icons (Only shown when platforms are enabled) -->
      {socialPlatforms.length > 0 && (
        <div class="flex justify-center gap-4 mb-6">
          {socialPlatforms.map((platform) => (
            <a
              href={platform.url}
              target={platform.name === 'Email' ? '_self' : '_blank'}
              rel={platform.name === 'Email' ? '' : 'noopener noreferrer'}
              class="p-3 rounded-full bg-muted hover:bg-primary hover:text-primary-foreground transition-colors"
              aria-label={platform.ariaLabel}
              title={platform.name}
            >
              {/* Icons using inline SVG - matching lucide-react style */}
              {platform.name === 'Twitter' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              )}
              {platform.name === 'Facebook' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {platform.name === 'Instagram' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke-width="2"/>
                  <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z" stroke-width="2"/>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke-width="2" stroke-linecap="round"/>
                </svg>
              )}
              {platform.name === 'LinkedIn' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {platform.name === 'YouTube' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              )}
              {platform.name === 'GitHub' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              )}
              {platform.name === 'Email' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      )}
      
      <!-- Copyright -->
      <div class="text-center text-sm text-muted-foreground">
        <p>Â© {currentYear} EncryptHer. All rights reserved.</p>
        <p class="mt-1">A nonprofit organization dedicated to women's digital and physical safety.</p>
      </div>
    </div>
  </div>
</footer>

