---
/**
 * Dark Mode Toggle Component
 * 
 * Provides a button to toggle between light and dark modes.
 * Persists preference in localStorage and syncs across tabs.
 * Supports multiple instances on the same page.
 */

// Generate unique ID for this instance
const uniqueId = Math.random().toString(36).substring(7);
---

<button
  type="button"
  class="theme-toggle relative p-2 text-foreground hover:text-primary transition-colors rounded-md hover:bg-accent"
  aria-label="Toggle dark mode"
>
  <!-- Sun Icon (visible in dark mode) -->
  <svg
    class="theme-icon-dark w-5 h-5 hidden"
    fill="currentColor"
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
      fill-rule="evenodd"
      clip-rule="evenodd"
    ></path>
  </svg>
  
  <!-- Moon Icon (visible in light mode) -->
  <svg
    class="theme-icon-light w-5 h-5 hidden"
    fill="currentColor"
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
  </svg>
</button>

<script>
  /**
   * Theme management with error handling and accessibility
   * 
   * Features:
   * - localStorage persistence
   * - System preference detection
   * - Cross-tab synchronization
   * - Multiple toggle instances support
   * - Error handling and fallbacks
   */
  
  function initDarkMode() {
    try {
      const html = document.documentElement;

      // Check for saved theme preference or default to system preference
      const getTheme = (): string => {
        try {
          if (typeof localStorage !== 'undefined') {
            const stored = localStorage.getItem('theme');
            if (stored && (stored === 'dark' || stored === 'light')) {
              return stored;
            }
          }
        } catch (error) {
          console.warn('[DarkMode] localStorage not available:', error);
        }
        
        // Check system preference
        try {
          if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
            return 'dark';
          }
        } catch (error) {
          console.warn('[DarkMode] matchMedia not supported:', error);
        }
        
        return 'light';
      };

      // Apply theme to document and update all toggle instances
      const applyTheme = (theme: string) => {
        try {
          const darkIcons = document.querySelectorAll('.theme-icon-dark');
          const lightIcons = document.querySelectorAll('.theme-icon-light');
          const themeToggles = document.querySelectorAll('.theme-toggle');
          
          if (theme === 'dark') {
            html.classList.add('dark');
            darkIcons.forEach(icon => icon.classList.remove('hidden'));
            lightIcons.forEach(icon => icon.classList.add('hidden'));
            themeToggles.forEach(toggle => {
              if (toggle instanceof HTMLElement) {
                toggle.setAttribute('aria-label', 'Switch to light mode');
              }
            });
          } else {
            html.classList.remove('dark');
            lightIcons.forEach(icon => icon.classList.remove('hidden'));
            darkIcons.forEach(icon => icon.classList.add('hidden'));
            themeToggles.forEach(toggle => {
              if (toggle instanceof HTMLElement) {
                toggle.setAttribute('aria-label', 'Switch to dark mode');
              }
            });
          }
        } catch (error) {
          console.error('[DarkMode] Error applying theme:', error);
        }
      };

      // Initialize theme on page load
      const currentTheme = getTheme();
      applyTheme(currentTheme);

      // Toggle theme on any button click
      const themeToggles = document.querySelectorAll('.theme-toggle');
      themeToggles.forEach(toggle => {
        toggle.addEventListener('click', () => {
          try {
            const isDark = html.classList.contains('dark');
            const newTheme = isDark ? 'light' : 'dark';
            
            applyTheme(newTheme);
            
            // Persist to localStorage
            try {
              if (typeof localStorage !== 'undefined') {
                localStorage.setItem('theme', newTheme);
              }
            } catch (error) {
              console.warn('[DarkMode] Could not save theme preference:', error);
            }
          } catch (error) {
            console.error('[DarkMode] Error toggling theme:', error);
          }
        });
      });

      // Listen for changes in other tabs/windows
      try {
        window.addEventListener('storage', (e) => {
          if (e.key === 'theme' && e.newValue) {
            applyTheme(e.newValue);
          }
        });
      } catch (error) {
        console.warn('[DarkMode] Could not setup cross-tab sync:', error);
      }

      // Listen for system theme changes
      try {
        const darkModeQuery = window.matchMedia('(prefers-color-scheme: dark)');
        darkModeQuery.addEventListener('change', (e) => {
          try {
            // Only follow system preference if user hasn't set a preference
            if (!localStorage.getItem('theme')) {
              applyTheme(e.matches ? 'dark' : 'light');
            }
          } catch (error) {
            console.warn('[DarkMode] Error handling system theme change:', error);
          }
        });
      } catch (error) {
        console.warn('[DarkMode] Could not setup system theme listener:', error);
      }

      console.info('[DarkMode] Initialized with theme:', currentTheme);
    } catch (error) {
      console.error('[DarkMode] Error initializing dark mode:', error);
    }
  }

  // Initialize on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initDarkMode);
  } else {
    initDarkMode();
  }

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initDarkMode);
</script>

